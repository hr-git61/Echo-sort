{
    "manifest_version": 3,
    "name": "Echo sort (FSA)",
    "version": "1.1.0",
    "description": "manaba のファイルリンクを File System Access API で manaba/<科目名>/<元ファイル名> に自動保存します。",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://manaba.tsukuba.ac.jp/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://manaba.tsukuba.ac.jp/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "options_page": "options.html"
}