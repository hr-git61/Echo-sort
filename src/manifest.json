{
    "manifest_version": 3,
    "name": "Echo sort",
    "version": "0.0.1",
    "description": "manaba のファイルリンクを File System Access API で <ベース>/<科目名>/<元ファイル名> に自動保存します。",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://manaba.tsukuba.ac.jp/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://manaba.tsukuba.ac.jp/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "options_page": "options.html"
}